{{#if ADMIN}}
<h2>Editar Categoria</h2>
{{#if msgerro}}
<div class="alert alert-danger">{{msgerro}}</div>
{{/if}}
{{#if msgok}}
<div class="alert alert-success">{{msgok}}</div>
{{/if}}
<div class="card">
    <div class="card-body">
        {{#each tudo}}
        {{#if nome}}
        <form action="/categorias/edit" method="POST">
            <input type="hidden" id="id" name="id" value="{{_id}}">
            <input type="text" id="nome" name="nome" value="{{nome}}" class="form-control"><br>
            <input type="text" id="slug" name="slug" value="{{slug}}" class="form-control"><br><br>
            <button class="btn btn-warning" type="submit">Editar</button><br>
        </form>
        {{/if}}
        {{/each}}
    </div>
</div>
{{else}}
<h2>Você não tem permissão para Adicionar</h2>
{{/if}}