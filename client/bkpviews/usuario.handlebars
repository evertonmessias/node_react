<div class="alert alert-danger">{{msgerro}}</div>
{{/if}}
{{#if msgok}}
<div class="alert alert-success">{{msgok}}</div>
{{/if}}

<div class="card">
    <div class="card-body">
        <form action="/usuario/novo" method="POST">
            <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" required><br>
            <input type="email" id="email" name="email" placeholder="E-Mail" class="form-control" required><br>
            <input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required><br>
            <input type="password" id="senha2" name="senha2" placeholder="Repita sua Senha" class="form-control" required><br><br>
            <button class="btn btn-success" type="submit">Cadastrar</button><br>
        </form>
    </div>
</div>