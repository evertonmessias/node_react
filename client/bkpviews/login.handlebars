<h2>Login</h2>
{{#if msgerro}}
<div class="alert alert-danger">{{msgerro}}</div>
{{/if}}
{{#if msgok}}
<div class="alert alert-success">{{msgok}}</div>
{{/if}}

<div class="card">
    <div class="card-body">
        <form action="/login/in" method="POST">
            <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" required><br>
            <input type="password" id="senha" name="senha" placeholder="Senha" class="form-control" required><br>
            <button class="login btn btn-success" type="submit">Login</button>
            <button class="login btn btn-warning" onclick="window.location.href='/usuario'" type="button">Cadastrar</button><br>
        </form>
    </div>
</div>