{{#if ADMIN}}
<h2>Cadastrar Categoria</h2>
{{#if msgerro}}
<div class="alert alert-danger">{{msgerro}}</div>
{{/if}}
{{#if msgok}}
<div class="alert alert-success">{{msgok}}</div>
{{/if}}

<div class="card">
    <div class="card-body">
        <form action="/categorias/nova" method="POST">
            <input type="text" id="nome" name="nome" placeholder="Nome da Categoria" class="form-control" required><br>
            <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control" required><br><br>
            <button class="btn btn-success" type="submit">Cadastrar</button><br>
        </form>
    </div>
</div>
{{else}}
<h2>Você não tem permissão para Adicionar</h2>
{{/if}}